<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF080810">

    <!-- GLSurfaceView -->
    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar with Glass Effect -->
        <FrameLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="52dp"
            android:paddingBottom="16dp"
            android:background="@drawable/gradient_top_shadow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- App Title with Gradient Effect -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FilmSims"
                        android:textColor="@color/text_primary"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="フィルムシミュレーター"
                        android:textColor="@color/accent_primary"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.08"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Change Photo Button -->
                <ImageButton
                    android:id="@+id/btnChangePhoto"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_button"
                    android:src="@drawable/ic_add"
                    app:tint="@color/text_primary"
                    android:padding="11dp"
                    android:scaleType="centerInside"
                    android:contentDescription="写真を変更" />

                <!-- Settings Button -->
                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_round_button"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/text_primary"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:contentDescription="設定" />

                <!-- Export Button with Gradient -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:minHeight="44dp"
                        android:text="保存"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="24dp"
                        android:background="@drawable/bg_accent_gradient_button"
                        app:backgroundTint="@null"
                        app:cornerRadius="22dp"
                        app:elevation="4dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp" />

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- Content Area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Placeholder -->
            <LinearLayout
                android:id="@+id/placeholderContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FF080810"
                android:clickable="true"
                android:focusable="true"
                android:padding="40dp">

                <!-- Icon with Glass Container -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_glass_panel"
                    android:padding="28dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add_photo"
                        app:tint="@color/text_tertiary"
                        android:layout_gravity="center" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="画像を選択"
                    android:textColor="@color/text_primary"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="写真を選んでフィルムシミュレーションを適用"
                    android:textColor="@color/text_tertiary"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:lineSpacingMultiplier="1.3" />

                <!-- Browse Gallery Button with Gradient -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickImage"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginTop="36dp"
                    android:paddingHorizontal="32dp"
                    android:text="ギャラリーを開く"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.03"
                    android:background="@drawable/bg_accent_gradient_button"
                    app:backgroundTint="@null"
                    app:cornerRadius="28dp"
                    app:elevation="6dp"
                    app:icon="@drawable/ic_gallery"
                    app:iconTint="#FFFFFFFF"
                    app:iconSize="22dp"
                    app:iconPadding="10dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Bottom Controls with Glass Effect -->
        <LinearLayout
            android:id="@+id/controlPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_control_panel"
            android:paddingTop="24dp"
            android:paddingBottom="36dp"
            android:paddingHorizontal="20dp">

            <!-- Adjustments Header (Collapsible) -->
            <LinearLayout
                android:id="@+id/adjustmentHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="グレイン"
                    android:textColor="@color/accent_primary"
                    android:textSize="12sp"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:id="@+id/adjustmentToggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expand_less"
                    app:tint="@color/text_tertiary"
                    android:rotation="0" />

            </LinearLayout>

            <!-- Sliders Panel (Collapsible Content) - Grain Controls Only -->
            <LinearLayout
                android:id="@+id/sliderPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:visibility="gone">

                <!-- Grain -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <ImageView
                        android:id="@+id/grainIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_grain"
                        app:tint="@color/text_tertiary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/grainLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="フィルムグレイン"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/grainValue"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="8dp" />

                    <CheckBox
                        android:id="@+id/grainToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/accent_primary"
                        android:scaleX="0.85"
                        android:scaleY="0.85" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/grainSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="@color/text_tertiary"
                    android:thumbTint="@color/text_tertiary"
                    android:progressBackgroundTint="#30FFFFFF"
                    android:enabled="false" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#20FFFFFF"
                    android:layout_marginVertical="10dp" />

            </LinearLayout>

            <!-- Camera Brands Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="カメラ"
                android:textColor="@color/accent_primary"
                android:textSize="12sp"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/brandList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:layout_marginBottom="20dp" />

            <!-- Style Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="スタイル"
                android:textColor="@color/accent_primary"
                android:textSize="12sp"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/genreList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:layout_marginBottom="20dp" />

            <!-- Quick Intensity Slider (Always Visible when LUT selected) -->
            <LinearLayout
                android:id="@+id/quickIntensityPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_opacity"
                        app:tint="@color/accent_primary"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="強度"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/quickIntensityValue"
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:gravity="end"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/quickIntensitySlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="@color/accent_primary"
                    android:thumbTint="@color/accent_primary"
                    android:progressBackgroundTint="#40FFFFFF" />

            </LinearLayout>

            <!-- Presets Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="プリセット"
                android:textColor="@color/accent_primary"
                android:textSize="12sp"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lutList"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:scrollbars="none" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
